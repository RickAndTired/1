<theme>
  <view name="system,gamelist">
    <carousel name="c">
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <size>1 1</size>
      <itemTransitions>instant</itemTransitions>
      <color>222222</color>
      <textColor>F3EFE0</textColor>
      <imageType>none</imageType>
      <itemSize>0.1 0.25</itemSize>
      <itemScale>3</itemScale>
      <maxItemCount>1</maxItemCount>
      <textHorizontalScrolling>true</textHorizontalScrolling>
      <textHorizontalScrollSpeed>0.1</textHorizontalScrollSpeed>
      <textHorizontalScrollDelay>0.25</textHorizontalScrollDelay>
      <fontSize>0.25</fontSize>
      <letterCase>uppercase</letterCase>
      <lineSpacing>3</lineSpacing>
      <fontPath>./UbuntuMono-Bold-spaced2.ttf</fontPath>
    </carousel>
    <helpsystem name="help">
      <origin>1 1</origin>
      <pos>0 0</pos>
    </helpsystem>  
  </view>
</theme>
